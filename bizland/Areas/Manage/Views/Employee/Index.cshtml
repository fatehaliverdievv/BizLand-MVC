
@{
    ViewData["Title"] = "Index";
}
@model ICollection<Employee>
<div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>FullName</th>
                          <th>Position</th>
                          <th>Imgurl</th>
                          <th>Testimonial</th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (Employee item in Model)
                            {
                            <tr>
                              <td>@item.Id</td>
                              <td>@item.FullName</td>
                              <td>@item.Position</td>
                              <td><img width="40" src="@item.ImgUrl"></img></td>
                              <td>@item.Testimonial</td>
                                      <td><a type="button" class="btn btn-dark" asp-area="Manage" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                                          <td><a type="button" class="btn btn-success"  asp-area="Manage" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                            </tr>
                            }
                      </tbody>  
                    </table>
                  </div>

