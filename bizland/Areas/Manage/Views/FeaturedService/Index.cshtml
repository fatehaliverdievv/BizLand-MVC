
@{
    ViewData["Title"] = "Index";
}
@model ICollection<FeaturedService>
<div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>Name</th>
                          <th>Description</th>
                          <th>IconUrl</th>
                        </tr>
                      </thead>
                      <tbody>
            @foreach (FeaturedService item in Model)
            {
                                <tr>
                                  <td>@item.Id</td>
                                  <td>@item.Name</td>
                                  <td>@item.Description</td>
                                  <td><img width="40" src="@item.IconUrl"></img></td>
                                      <td><a type="button" class="btn btn-dark" asp-area="Manage" asp-controller="FeaturedService" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                                       <td><a type="button" class="btn btn-success"  asp-area="Manage" asp-controller="FeaturedService" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                </tr>
            }
                      </tbody>  
                    </table>
                  </div>

