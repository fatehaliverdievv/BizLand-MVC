
@{
    ViewData["Title"] = "Index";
}
@model ICollection<Hero>
<div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>Name</th>
                          <th>Videourl</th>
                          <th>BckImgUrl</th>
                          <th>ShortDesc</th>
                        </tr>
                      </thead>
                      <tbody>
            @foreach (Hero item in Model)
            {
                                <tr>
                                  <td>@item.Id</td>
                                  <td>@item.Name</td>
                                  <td>@item.ShortDescription</td>
                                  <td><img width="40" src="@item.VideoUrl"></img></td>
                                  <td>@item.ShortDescription</td>
                                          <td><a type="button" class="btn btn-dark" asp-area="Manage" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                                              <td><a type="button" class="btn btn-success"  asp-area="Manage" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                </tr>
            }
                      </tbody>  
                    </table>
                  </div>

