@model Hero
<div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Create Hero</h4>
                  <form class="forms-sample" method="post">
                    <div class="form-group">
                      <label asp-for="Name"></label>
                      <input asp-for="Name" class="form-control">
                      <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="VideoUrl"></label>
                      <input asp-for="VideoUrl" class="form-control">
                      <span asp-validation-for="VideoUrl" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                      <label asp-for="BackgroundImgUrl">BcgImg</label>
                      <input asp-for="BackgroundImgUrl" class="form-control" >
                      <span asp-validation-for="BackgroundImgUrl" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                      <label asp-for="ShortDescription"></label>
                      <input asp-for="ShortDescription" class="form-control">
                      <span asp-validation-for="ShortDescription" class="text-danger"></span>

                    </div>
                    <button type="submit" class="btn btn-primary me-2">Create</button>
                    <button class="btn btn-light" asp-area="Manage" asp-controller="Employee" asp-action="Index">Cancel</button>
                  </form>
                </div>
              </div>
            </div>




